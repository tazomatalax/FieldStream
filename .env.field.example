# Field Device Environment Configuration
# Copy this file to .env on each field device

# Unique device identifier (MUST be unique per device)
DEVICE_ID=field-device-001

# DMZ Server connection
DOMAIN_NAME=your-dmz-server.com
SERVER_URL=wss://your-dmz-server.com/ws

# Certificate paths
CERT_PATH=/certs

# Data transmission settings
DATA_SEND_INTERVAL=5000  # milliseconds
MAX_RETRY_ATTEMPTS=10
RETRY_BACKOFF_MS=1000

# Device-specific settings
DEVICE_TYPE=sensor
DEVICE_LOCATION=field-site-alpha
DEVICE_MODEL=process-monitor-v1

# Logging level (debug, info, warn, error)
LOG_LEVEL=info